@model RegisterUserDtoUI
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>



    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">

                        <form method="post" asp-controller="Register" asp-action="Index" enctype="multipart/form-data">

                            <div class="card-body px-5 py-2">


                                <h3 class="my-2 text-center">Kayıt Ol</h3>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="NameForRegister">Ad</label>
                                    <input type="text" asp-for="NameForRegister" class="form-control form-control" required />
                                </div>
                                
                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="SurnameForRegister">Soyad</label>
                                    <input type="text" asp-for="SurnameForRegister" class="form-control form-control" required />
                                </div>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="UserNameForRegister">Kullanıcı Adı</label>
                                    <input type="text" asp-for="UserNameForRegister" class="form-control form-control" required />
                                </div>

                                
                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="EmailForRegister">e-mail</label>
                                    <input type="email" asp-for="EmailForRegister" class="form-control form-control" required />
                                </div>


                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="PasswordForRegister">Şifre</label>
                                    <input type="password" asp-for="PasswordForRegister" class="form-control form-control" required />
                                </div>
                                
                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" asp-for="ImageFile">Profil Fotoğrafı</label>
                                    <input type="file" asp-for="ImageFile" class="form-control form-control" required />
                                </div>

                                <div class="text-end">

                                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn btn-block ms-auto"         type="submit">Kayıt Ol</button>

                                </div>
                                <hr class="my-3">

                              

                                <div class="text-center">Zaten hesabınız varsa <a href="/Login/Index"> Giriş yapın </a>  </div>

                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>