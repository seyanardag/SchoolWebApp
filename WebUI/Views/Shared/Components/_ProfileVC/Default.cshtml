@model CustomUser


<a class="dropdown-toggle profile-pic" data-toggle="dropdown" href="#" aria-expanded="false"> <img src="@Model.ImageUrl" alt="user-img" width="36" class="img-circle"><span>@Model.UserName</span> </a>
<ul class="dropdown-menu dropdown-user">
	<li>
		<div class="user-box">
			<div class="u-img"><img src="@Model.ImageUrl" alt="@Model.UserName"></div>
			<div class="u-text">
				<h4>@Model.Name</h4>
				<p class="text-muted">@Model.Email</p>				
			</div>
		</div>
	</li>
	<div class="dropdown-divider"></div>	
	<a class="dropdown-item" href="/Profile/UpdateProfile/"><i class="ti-settings"></i> Profil Güncelle </a>
	<a class="dropdown-item" href="/Login/LogOut/"><i class="fa fa-power-off"></i> Çıkış Yap </a>
</ul>