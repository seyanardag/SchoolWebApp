@model UpdateStudentDtoUI
@{
    ViewData["Title"] = "UpdateStudent";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}


<style>
    span {
        color: red;
        font-size: 9pt;
    }
</style>

<div class="row">
    <div class="col-md-12">

        <form method="post" asp-controller="Student" asp-action="UpdateStudent" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Ürün Güncelleme</div>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="StudentId" />

                    <div class="form-group">
                        <label asp-for="FirstName">Öğrenci Adı</label>
                        <input type="text" class="form-control" asp-for="FirstName">
                        <span asp-validation-for="FirstName"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">Öğrenci Soyadı</label>
                        <input type="text" class="form-control" asp-for="LastName">
                        <span asp-validation-for="LastName"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="BirthDate">Doğum Tarihi</label>
                        <input type="date" class="form-control" asp-for="BirthDate">
                        <span asp-validation-for="BirthDate"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="EnrollmentDate">Kayıt Tarihi</label>
                        <input type="date" class="form-control" asp-for="EnrollmentDate">
                        <span asp-validation-for="EnrollmentDate"></span>

                    </div>

                    <div class="form-group ">
                        <div>Öğrenci Fotoğrafı</div>
                        <div class="border border-3 bg-light rounded p-3">

                            <input type="hidden" class="form-control" asp-for="ImgUrl">
                            <label>Eski görsel</label><br />
                            <img src="@Model.ImgUrl" width="150" /><br />

                            <label class="mt-3">Yeni görseli seçiniz</label><br />
                             <input class="my-2" type="file" asp-for="ImgFile" /> 
                        </div>
                    </div>


                    <div class="form-check">
                        <label>Kayıt Durumu</label><br>
                        <label class="form-radio-label">
                            <input class="form-radio-input" type="radio" asp-for="isDeleted" value="true">
                            <span class="form-radio-sign">Silinmiş</span>
                        </label>
                        <label class="form-radio-label ml-3">
                            <input class="form-radio-input" type="radio" asp-for="isDeleted" value="false">
                            <span class="form-radio-sign">Aktif</span>
                        </label>
                    </div>


             

                </div>
                <div class="card-action">
                    <button class="btn btn-success" type="submit">Bilgileri Güncelle</button>
                    <a class="btn btn-danger" asp-controller="Student" asp-action="Index">Geri</a>
                </div>
            </div>
        </form>
    </div>

</div>
